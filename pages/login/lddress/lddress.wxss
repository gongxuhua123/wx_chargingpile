.header-logo {
  width: 293rpx;
  height: 293rpx;
  margin: 0 auto;
  margin-top: 76rpx;
  margin-bottom: 49rpx;
}

.header-logo image {
  display: block;
  width: 100%;
  height: 100%;
}

.picker-box {
  margin: 64rpx 88rpx 0 105rpx;
  border-bottom: 1rpx solid #e8eaee;
  display: flex;
  justify-content: space-between;
}

.box-left {
  display: flex;
  align-items: center;
  padding-bottom: 22rpx;
  max-width: 95%;
}

.box-left .left-txt, .box-left .left-region {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: #bbb;
  padding-left: 20rpx;
}

.box-left .left-region {
  color: #000;
}

.box-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid rgba(53, 51, 51, 0.5);
  border-right: 2rpx solid rgba(53, 51, 51, 0.5);
  transform: rotate(135deg);
  margin-top: 5rpx;
}

.btn-area {
  margin: 71rpx auto;
}

.btn-area button {
  width: 557rpx;
  height: 79rpx;
  background: linear-gradient(90deg, #5ae2b0 0%, #48c1ff 100%);
  border-radius: 50rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: normal;
  line-height: 79rpx;
  color: #fff;
}

.btn-area .btn-icon {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #fff;
  border-right: 2rpx solid #fff;
  transform: rotate(45deg);
  position: absolute;
  right: 42rpx;
  top: 31rpx;
}
